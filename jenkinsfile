pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh '''
                chmod +x setup.sh
                ./setup.sh
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh '''
                python manage.py migrate
                python manage.py test
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}