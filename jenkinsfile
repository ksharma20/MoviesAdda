pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking In...'
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/ksharma20/MoviesAdda.git']]])
            }
        }
        stage('Build') {
            steps {
                echo 'Building....'
                git branch: 'main', url: 'https://github.com/ksharma20/MoviesAdda.git'
                sh setup.sh
            }
        }
        stage('Test') {
            steps {
                echo 'Testing....'
                sh 'python manage.py test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}